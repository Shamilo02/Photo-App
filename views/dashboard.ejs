<%- include("partials/_header") %>


  <body class="main-layout inner_page">


    <div class="loader_bg">
      <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
    </div>


    <%- include("partials/_navbar") %>


      <div class="customers">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="titlepage text_align_center">
                <!-- <span>04</span> -->
                <h2> Welcome <%- user.username %>
                </h2>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="satteb text_align_center">
                <p> <%= user.bio %> </p>
                <h3><%= user.fullname %>  </h3>
                <i><img style="width: 150px; height: 150px" src="<%= user.url %> " alt="#" /></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 text_align_center">
          <button data-toggle="modal" data-target=".bd-example-modal-lg" type="button"
            style=" margin-top:100px; margin-left: 50%; transform: translateX(-50%);" class="read_more"
            >Add New Photo</button>
        </div>
        <div class="col-md-4 mt-0 text_align_center">
          <button data-toggle="modal" data-target=".updateModal" type="button"
            style=" margin-top:100px; margin-left: 50%; transform: translateX(-50%);" class="read_more"
            >Update Account</button>
        </div>
        <div class="col-md-4 mt-0 text_align_center">
          <a style=" margin-top:100px; margin-left: 50%; transform: translateX(-50%);" 
            class="read_more" class="btn btn-danger" href="/users/<%= user._id%>?_method=DELETE"
            >Delete Account </a>
        </div>
      </div>


      <!-- User Post  -->
      <div class="gallery">
        <div class="container_with">
           <div class="row">
              <div class="col-md-12">
                 <div class="titlepage text_align_center">
                    <span>03</span>
                    <h2> <%- user.username %>'s Post </h2>
                 </div>
              </div>
           </div>
           <div class="tz-gallery">
              <div class="row">
              <% for( photo of photos ) { %>
                 <div class="col-lg-4 col-md-6 ma_bottom30">
                    <div class="lightbox">
                       <img src="<%- photo.url %> " alt="Bridge">
                       <div class="view_main">
                         <div class="pose">
                         <a class="read_more" href="/photos/<%-photo._id %>"><img src="/images/ga.png" alt="#"/></a>
                         <h3 style="padding-top: 10px; padding-bottom: 10px;"> <%- photo.title  %> </h3>
                         <p><%- photo.content.substring(0, 80) + '...' %> </p>
                       </div>
                       </div>
                    </div>
                 </div>
              
              <% } %>
                       

                 <div class="col-md-12">
                   <a class="plus_btn" href="gallery.html">+</a>
                 </div>
              </div>
           </div>
        </div>
     </div>
      <!-- User Post  -->

      <div class="team">
        <div class="container_with">
           <div class="row">
              <div class="col-md-12">
                 <div class="titlepage text_align_center">
                   <span>  <%= user.followers.length  %>  </span>
                    <h2> Followers </h2>
   
                 </div>
              </div>

                 <% for( let fuser of user.followers  ) { %>
                 <div class="col-md-4">
                 <div class="team_box text_align_center">
                    <div class="team_img">
                      <figure><img src="/images/team3.jpg" alt="#"/></figure>
                    </div>
                    <div class="craig">
                      <h3><%= fuser.username  %> </h3>
                      <span>PHOTOGRAPHER</span>
                      <ul class="social_icon ">
                         <li><a href="Javascript:void(0)"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                         <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                         <li><a href="/users/<%= fuser._id %> "><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                      </ul>
                    </div>
                 </div>
              </div>
                 <% } %>
            
              


           </div>
        </div>
     </div>
      <div class="team">
        <div class="container_with">
           <div class="row">
              <div class="col-md-12">
                 <div class="titlepage text_align_center">
                   <span><%=  user.followings.length  %> </span>
                    <h2> Followings  </h2>
                 </div>
              </div>

                 <% for( let fuser of user.followings) { %>
                 <div class="col-md-4">
                 <div class="team_box text_align_center">
                    <div class="team_img">
                      <figure><img src="/images/team3.jpg" alt="#"/></figure>
                    </div>
                    <div class="craig">
                      <h3><%= fuser.username  %> </h3>
                      <span>PHOTOGRAPHER</span>
                      <ul class="social_icon ">
                         <li><a href="Javascript:void(0)"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                         <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                         <li><a href="/users/<%= fuser._id %> "><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                      </ul>
                    </div>
                 </div>
              </div>
                 <% } %>
            
              


           </div>
        </div>
     </div>

<!--^ ADD NEW PHOTO -->
      <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div style="margin-top: 50px; margin-bottom: 50px;" class="container">
              <div class="row">
                <div class="col-md-12 ">
                  <div class="text_align_center">
                    <h2 style="
                    font-size: 30px;
                    margin-bottom: 20px;
                    color: #D43A8E;
                ">Add New Photo</h2>
                  </div>
                </div>
                <div class="col-md-10 offset-md-1">
                  <form id="request" class="main_form" method="post" action="/photos" 
                  enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-md-12">
                        <input class="form_control" placeholder="Name" type="text" name="title">
                      </div>
                      <div class="col-md-12">
                        <textarea 
                        name="content" 
                        style="height: 150px;" 
                        class="form_control" placeholder="content"
                          rows="5"></textarea>
                      </div>

                      <div style="margin-bottom: 20px ;" class="col-md-12">
                        <input type="file" name="image" class="form-control-file">
                      </div>

                      <div class="col-md-12">
                        <div class="group_form">
                          <button class="read_more">Upload File</button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
<!--^ ADD NEW PHOTO -->


<!--^ UPDATE USER  -->
      <div class="modal fade updateModal" tabindex="-1" 
      role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div style="margin-top: 50px; margin-bottom: 50px;" class="container">
              <div class="row">
                <div class="col-md-12 ">
                  <div class="text_align_center">
                    <h2 style="
                    font-size: 30px;
                    margin-bottom: 20px;
                    color: #D43A8E;
                ">UPDATE USER</h2>
                  </div>
                </div>
                <div class="col-md-10 offset-md-1">
                  <form id="request" class="main_form" method="post" 
                  action="/users/<%= user._id%>?_method=PUT" 
                  enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-md-12">
                        <input class="form_control" placeholder="username" value="<%= user.username %> " type="text" name="username">
                      </div>

                      <div class="col-md-12">
                        <input class="form_control" placeholder="fullname" value="<%= user.fullname %> " type="text" name="fullname">
                      </div>
  
                      <div class="col-md-12">
                        <textarea 
                        name="bio" 
                        style="height: 150px;" 
                        class="form_control" placeholder="bio"
                          rows="5"> <%= user.bio %> </textarea>
                      </div>

                      <div style="margin-bottom: 20px ;" class="col-md-12">
                        <input type="file" name="image" class="form-control-file">
                      </div>

                      

                      <div class="col-md-12">
                        <div class="group_form">
                          <button class="read_more">Upload File</button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
<!--^ UPDATE -->




      <%- include("partials/_footer") %>