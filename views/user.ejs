<%- include("partials/_header") %>


  <body class="main-layout inner_page">


    <div class="loader_bg">
      <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
    </div>


    <%- include("partials/_navbar") %>


      <div class="customers">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="titlepage text_align_center">
                <span>04</span>
                <h2>Welcome <%- user.username %>
                </h2>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="satteb text_align_center">
                <p><%= user.bio %> </p>
                <h3><%= user.fullname %>  </h3>
                <i><img style="width: 150px; height: 150px;" src="<%= user.url %> " alt="#" /></i>
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="container">
        <div class="row">
          <div class="col-md-12">

            <div class="text_align_center">

              <% if (!inFollowers) { %>
                <a class="read_more" style="margin: 20px auto ;" 
                href="/users/<%= user._id %>/follow?_method=PUT"> Follow </a>
               
              <% } else {  %>
                
                <a class="read_more" style="margin: 20px auto ;" 
                href="/users/<%= user._id %>/unfollow?_method=PUT"> Unfollow </a>
                <% } %> 

            </div>

          </div>
        </div>
      </div>
     


      <!-- User Post  -->
      <div class="gallery">
        <div class="container_with">
           <div class="row">
              <div class="col-md-12">
                 <div class="titlepage text_align_center">
                    <span>03</span>
                    <h2> <%- user.username %>'s Post </h2>
                 </div>
              </div>
           </div>
           <div class="tz-gallery">
              <div class="row">
              <% for( photo of photos ) { %>
                 <div class="col-lg-4 col-md-6 ma_bottom30">
                    <div class="lightbox">
                       <img src="<%- photo.url %> " alt="Bridge">
                       <div class="view_main">
                         <div class="pose">
                         <a class="read_more" href="/photos/<%-photo._id %>"><img src="/images/ga.png" alt="#"/></a>
                         <h3 style="padding-top: 10px; padding-bottom: 10px;"> <%- photo.title  %> </h3>
                         <p><%- photo.content.substring(0, 80) + '...' %> </p>
                       </div>
                       </div>
                    </div>
                 </div>
              
              <% } %>
                       

                 <div class="col-md-12">
                   <a class="plus_btn" href="gallery.html">+</a>
                 </div>




              </div>
           </div>
        </div>
     </div>


     <div class="team">
      <div class="container_with">
         <div class="row">
            <div class="col-md-12">
               <div class="titlepage text_align_center">
                 <span>  <%= user.followers.length  %>  </span>
                  <h2> Followers </h2>
 
               </div>
            </div>

               <% for( let fuser of user.followers  ) { %>
               <div class="col-md-4">
               <div class="team_box text_align_center">
                  <div class="team_img">
                    <figure><img src="/images/team3.jpg" alt="#"/></figure>
                  </div>
                  <div class="craig">
                    <h3><%= fuser.username  %> </h3>
                    <span>PHOTOGRAPHER</span>
                    <ul class="social_icon ">
                       <li><a href="Javascript:void(0)"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                       <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                       <li><a href="/users/<%= fuser._id %> "><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                    </ul>
                  </div>
               </div>
            </div>
               <% } %>
          
            


         </div>
      </div>
   </div>
    <div class="team">
      <div class="container_with">
         <div class="row">
            <div class="col-md-12">
               <div class="titlepage text_align_center">
                 <span><%=  user.followings.length  %> </span>
                  <h2> Followings  </h2>
               </div>
            </div>

               <% for( let fuser of user.followings) { %>
               <div class="col-md-4">
               <div class="team_box text_align_center">
                  <div class="team_img">
                    <figure><img src="/images/team3.jpg" alt="#"/></figure>
                  </div>
                  <div class="craig">
                    <h3><%= fuser.username  %> </h3>
                    <span>PHOTOGRAPHER</span>
                    <ul class="social_icon ">
                       <li><a href="Javascript:void(0)"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                       <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                       <li><a href="/users/<%= fuser._id %> "><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                    </ul>
                  </div>
               </div>
            </div>
               <% } %>
          
            


         </div>
      </div>
   </div>

